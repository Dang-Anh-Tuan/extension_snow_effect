{
  "manifest_version": 3,
  "name": "Color picker demo",
  "description": "Choose color from website",
  "version": "1.0.1",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "icons": {
    "48": "logo-picker.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo-picker.png",
      "48": "logo-picker.png",
      "128": "logo-picker.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}